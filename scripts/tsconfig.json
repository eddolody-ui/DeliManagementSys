{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types",
      "../server/node_modules/@types"
    ]
  },
  "include": [
    "**/*"
  ]
}
